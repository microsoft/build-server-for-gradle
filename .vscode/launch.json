{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "JavaBspLauncher",
            "request": "launch",
            "mainClass": "com.microsoft.java.bs.core.JavaBspLauncher",
            "projectName": "server"
        },
        {
            "type": "java",
            "name": "Attach to Server",
            "request": "attach",
            "hostName": "localhost",
            "port": "8989",
            "projectName": "server"
        },
        {
            "type": "java",
            "name": "Attach to Gradle Plugin",
            "request": "attach",
            "hostName": "localhost",
            "port": "5005",
            "projectName": "plugin"
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        }
    ]
}